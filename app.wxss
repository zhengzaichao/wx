/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  background: #fff
}
/*第一个功能 通用灰色分隔块*/
.divider{
  height:20rpx;
  background:#f1f1f1;
  box-shadow: 0 5rpx 5rpx rgba(0,0,0,0.1) inset;
}
/*第二个功能 箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform: rotate(45deg)
}
/*小字体样式*/
.small{
  font-size: 12px;
  color:#aaa;
}
/*中等字体*/
.middle{
  font-size:14px;
}
