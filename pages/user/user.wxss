/*设置*/
.top{
    display: flex;
    justify-content: space-between;
    margin:20rpx;
}
.top>text{
    font-size:16px; 
}
.top>image{
    width:60rpx;
    height:60rpx;
}
/*头像*/
.head{
  margin:20rpx;
  font-size: 20px;
}
.head image{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-right:30rpx;
  vertical-align: middle;
}
/*黑卡*/
.card>image{
  width: 100%;
  height:200rpx;
}
/*等级*/
.grade{
  margin:20rpx;
  display: flex;
  justify-content: space-around;
}
.grade image{
  width:30rpx;
  height:30rpx;
  margin-right: 10rpx;
}
.grade .mid{
  margin-top:10rpx;
  color:black;
  font-size:16px;
}
/*订单*/
.order>view {
  display:flex;
  justify-content: space-around;
  align-items: center;
}
.order .one{
  margin:20rpx;
  font-size:16px;
  border-bottom:1px solid #ddd;
  padding-bottom:20rpx;
}
.order .two>view{
  text-align: center;
  padding-bottom:20rpx;
}
.order .two image{
  width:60rpx;
  height:60rpx;
}
/*底部多个功能*/
.details{
  margin-top:20rpx;
  display:flex;
  flex-wrap:wrap; 
}
.details>view{
  text-align: center;
  margin-bottom:20rpx;
  width:25%;
}
.details image{
  width:60rpx;
  height: 60rpx;
}